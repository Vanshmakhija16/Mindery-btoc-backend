# =====================================
# WHATSAPP INTEGRATION SETUP
# =====================================
# These credentials are required for WhatsApp OTP and booking confirmations

# Get these from: https://developers.facebook.com/docs/whatsapp/cloud-api/get-started
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_ACCESS_TOKEN=your_access_token_here

# Optional: WhatsApp Business Account ID (for advanced features)
# WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# Optional: Enable/Disable WhatsApp messaging
ENABLE_WHATSAPP=true

# =====================================
# EMAIL SETUP (SMTP)
# =====================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_FROM=noreply@mindery.com

# =====================================
# DATABASE
# =====================================
MONGO_URI=mongodb://localhost:27017/mindery
# or for MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/mindery

# =====================================
# JWT
# =====================================
JWT_SECRET=your_jwt_secret_key_here

# =====================================
# SERVER
# =====================================
PORT=5000
NODE_ENV=development

# =====================================
# FRONTEND
# =====================================
CLIENT_URL=http://localhost:5173

# =====================================
# PAYMENT GATEWAY (Razorpay)
# =====================================
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# =====================================
# NOTES FOR WHATSAPP SETUP
# =====================================
# 
# 1. Create a Meta/Facebook Business Account
# 2. Create a WhatsApp Business Account
# 3. Get your Phone Number ID and Access Token
# 4. Replace the values above with your actual credentials
# 
# Phone Number ID: Found in WhatsApp > Phone Numbers > Select Your Number > Phone Number ID
# Access Token: Create or use existing access token from Settings > User Tokens
#
# For testing, you can send messages to your own WhatsApp number
# Make sure the number is added to your WhatsApp Business Account's verified numbers list
#
# Test the setup by:
# POST /api/whatsapp/send-otp
# Body: { "phone": "9876543210" }
#
